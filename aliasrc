alias cl='./node_modules/.bin/coffeelint $(find ./* -name "*.coffee" -not -path "./node_modules/*")'

# aliases for ctags
ensure_command brew && alias ctags="`brew --prefix`/bin/ctags"
alias ct="ctags -R --exclude=log --exclude=node_modules *"

alias edit="${EDITOR}"

# aliases for grep
alias grep="grep --color=auto"
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias rg="grep -r --exclude=\"*.swp\" --exclude=tags"
alias crg="rg --exclude circle.log"
alias erg="rg --exclude-dir _site --exclude js/application.js"
alias hrg="nrg --exclude-dir front/src/js/lib --exclude-dir front/public \
                --exclude-dir front/tracker/ios/build"
alias jrg="rg --exclude-dir _site"
alias nrg="rg --exclude-dir node_modules"
alias rrg="rg --exclude-dir log --exclude-dir tmp --exclude-dir vendor"

# aliases for git
alias gbd="git branch -d"
alias gcaa="git commit -a --amend"
alias gcb="git checkout -b"
alias gcob="git checkout -b"
alias gpo="git push origin"
alias grso="git remote show origin"

alias h2d="~/bin/h2d.sh"
alias hello="echo hello"
alias hostedit="sudo vim /etc/hosts"
alias i="ssh irc"
alias irssi="TERM=screen-256color irssi"
alias jsw="jekyll serve -w"
alias kinit="kinit ${ANDREWID}@ANDREW.CMU.EDU"
alias l2pdf="~/bin/l2pdf.sh"

# aliases for ls
alias ls="ls --color=auto"
alias la="ls -al"
alias lh="ls -lh"
alias ll="ls -l"
alias lah="ls -lah"

alias md5sum="md5 -r"
alias newhw="~/CMU/templater/new_hw.rb"
alias newgem="~/bin/new_gemfile.sh"
alias ssh410="ssh -Y ghc50.ghc.andrew.cmu.edu"
alias octave="octave -qf"

alias rcup="rcup -x README.md -x install.sh"
alias rla="source ~/.aliasrc"
alias rlt="tmux source-file ~/.tmux.conf"
alias reload="source ~/.zshrc"
alias srb="~/bin/ssh-rebuild.sh"
alias tad="tmux attach -d"
alias sqlite="sqlite3"
alias v="vim"

[[ -f ~/.aliasrc.local ]] && source ~/.aliasrc.local
