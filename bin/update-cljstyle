#!/bin/bash

rm ~/bin/cljstyle

DARWIN_RELEASE=`curl -s https://api.github.com/repos/greglook/cljstyle/releases | jq '.[0].assets[0]'`

DOWNLOAD_URL=`echo ${DARWIN_RELEASE} | jq '.browser_download_url' | sed -e s/\"//g`

rm -rf /tmp/cljstyle*

echo "Downloading: ${DOWNLOAD_URL}"

wget -q -P /tmp/ `echo ${DOWNLOAD_URL}`

CLJSTYLE_NAME=`echo ${DARWIN_RELEASE} | jq '.name' | sed -e 's/"\(.*\).tar.gz"/\1/'`

tar -zxf /tmp/${CLJSTYLE_NAME}.tar.gz -C ~/bin

echo "Update complete!"
