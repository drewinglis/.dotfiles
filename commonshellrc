# vim: set syn=sh:

add_to_path_if_exists () {
  [[ -s $1 ]] && PATH=${PATH}:${1}
}

is_darwin () {
  if [ $(uname -s) = "Darwin" ]
    then
      return 1
  fi

  return 0
}

# make sure we have the whence command
which whence > /dev/null
if [ $? -ne 0 ]
  then
    alias whence="type 2>/dev/null"
fi

source ~/.exportrc
source ~/.aliasrc

add_to_path_if_exists $HOME/.rvm/bin
add_to_path_if_exists /usr/local/heroku/bin
add_to_path_if_exists /usr/local/share/npm/bin

whence dircolors >/dev/null && eval $( dircolors -b ~/.dircolors )

# I never want ctrl-s to "hang" my terminal
stty -ixon
